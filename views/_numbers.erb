<% @chump ||= Person.new("","").create_profile %>
<h3>Numbers for <%= @chump.name %>, born on <%= @chump.birthday %></h3>

<% [:whole_name, :vowel, :consonant, :birthdate].each do |k| %>
  <ul>
    <li><%= "#{k.to_s.gsub('_',' ').capitalize}: #{@chump[k].last}" %>.<br></li>
  </ul>
<%end%>
    
<% [:whole_name, :vowel, :consonant, :birthdate].each do |k| %>
  <%= "Others with the #{k.to_s} number #{@chump[k].last}:" %>
  <ul>
    <% @kindred[k].each do |l|%>
      <li>
        <%= l.name %>
      </li>
      <ul>
        <li>
          Birthday: <%= l.birthday %>
        </li>
        <li>
          Whole name: <%= l.whole_name.last %>
        </li>
        <li>
          Consonant: <%= l.consonant.last %>
        </li>
        <li>
          Vowel: <%= l.vowel.last %>
        </li>
        <li>
          Birthdate: <%= l.birthdate.last %>
        </li>
      </ul>

    <% end %>
  </ul>
<%end%>


